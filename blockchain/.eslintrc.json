{
  "root": true,
  "ignorePatterns": ["!**/*"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "project": "./tsconfig.json",
    "sourceType": "module"
  },
  "plugins": ["prettier"],
  "extends": [
    "prettier"
  ],
  "overrides": [
    {
      "files": ["*.ts", "*.tsx", "*.js", "*.jsx"],
      "rules": {
        "prettier/prettier": "error",
        "object-curly-spacing": "off",
        "max-len": [
          "error", 
         { 
             "code": 140
         }
        ]
      }
    }
  ]
}
